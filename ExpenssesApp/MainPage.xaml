<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ExpenssesApp" x:Class="ExpenssesApp.MainPage">
    <StackLayout VerticalOptions="Center" Margin="20,0">
        <!-- Place new controls here -->
        <Image x:Name="iconImage" Aspect="AspectFit" HorizontalOptions="FillAndExpand" HeightRequest="150" Margin="0,0,0,50"/>
        <Entry x:Name="Email" Placeholder="Email"  Keyboard="Email" ></Entry>
        <Entry x:Name="Password" Placeholder="Mot de passe" IsPassword="true"></Entry>
       <Button Text="Se connecter " Clicked="Handle_Clicked" TextColor="White" BackgroundColor="DodgerBlue" Margin="0,20,0,0"  ></Button>
        <StackLayout Margin="0,10,0,0">
          <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
              <Label>Vous n'avez pas de compte? </Label>
              <StackLayout>
                  <Label Text="Inscrivez-vous"/>
                  <BoxView BackgroundColor="black" HeightRequest="1"/>
                  <StackLayout.GestureRecognizers>
                      <TapGestureRecognizer x:Name="TabInscri" NumberOfTapsRequired="1" Tapped="TabInscrip"></TapGestureRecognizer>
                   </StackLayout.GestureRecognizers>
              </StackLayout>
              
          </StackLayout>  
        </StackLayout>
    </StackLayout>
</ContentPage>